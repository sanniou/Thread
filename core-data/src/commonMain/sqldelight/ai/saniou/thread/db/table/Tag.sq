import ai.saniou.thread.domain.model.TagType;

CREATE TABLE Tag (
    id TEXT NOT NULL PRIMARY KEY,
    name TEXT NOT NULL,
    color TEXT,
    icon TEXT,
    url TEXT,
    type TEXT AS TagType NOT NULL
);

insert:
INSERT OR IGNORE INTO Tag(id, name, color, icon, url, type) VALUES ?;

getTagsForBookmark:
SELECT T.* FROM Tag T
JOIN BookmarkTag BT ON T.id = BT.tagId
WHERE BT.bookmarkId = ?;

getAllTags:
SELECT * FROM Tag;